{
  "extends": [
    "config:best-practices",
    "schedule:weekly"
  ],
  "enabledManagers": ["argocd"],
  "argocd": {
    "fileMatch": ["^app-of-apps/addons/.+/.+\\.ya?ml$"]
  },

  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard (Cluster Addons)",

  "prConcurrentLimit": 3,
  "prHourlyLimit": 1,

  "packageRules": [
    {
      "matchManagers": ["argocd"],
      "matchDatasources": ["helm"],
      "groupName": "Cluster addon updates (grouped by repo)"
    },
    {
      "matchManagers": ["argocd"],
      "matchDatasources": ["helm"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": false
    }
  ]
}
